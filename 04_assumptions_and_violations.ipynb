    "# 📊 가정 검정 및 시각화 도구\n",
    "def check_assumptions(group1, group2, group1_name='그룹 1', group2_name='그룹 2'):\n",
    "    \\\"\\\"\\\"t-검정 가정들을 확인하는 함수\\\"\\\"\\\"\n",
    "    \n",
    "    results = {}\n",
    "    \n",
    "    # 1. 정규성 검정 (Shapiro-Wilk)\n",
    "    shapiro1 = stats.shapiro(group1)\n",
    "    shapiro2 = stats.shapiro(group2)\n",
    "    \n",
    "    results['normality'] = {\n",
    "        'group1_stat': shapiro1[0],\n",
    "        'group1_p': shapiro1[1],\n",
    "        'group2_stat': shapiro2[0],\n",
    "        'group2_p': shapiro2[1],\n",
    "        'both_normal': shapiro1[1] > 0.05 and shapiro2[1] > 0.05\n",
    "    }\n",
    "    \n",
    "    # 2. 등분산성 검정 (Levene's test)\n",
    "    levene = stats.levene(group1, group2)\n",
    "    results['equal_variance'] = {\n",
    "        'statistic': levene[0],\n",
    "        'p_value': levene[1],\n",
    "        'assumption_met': levene[1] > 0.05\n",
    "    }\n",
    "    \n",
    "    # 3. 기술 통계\n",
    "    results['descriptive'] = {\n",
    "        'group1_mean': np.mean(group1),\n",
    "        'group1_std': np.std(group1, ddof=1),\n",
    "        'group1_n': len(group1),\n",
    "        'group2_mean': np.mean(group2),\n",
    "        'group2_std': np.std(group2, ddof=1),\n",
    "        'group2_n': len(group2),\n",
    "        'variance_ratio': np.var(group1, ddof=1) / np.var(group2, ddof=1)\n",
    "    }\n",
    "    \n",
    "    return results\n",
    "\n",
    "def visualize_assumptions(group1, group2, group1_name='그룹 1', group2_name='그룹 2'):\n",
    "    \\\"\\\"\\\"가정 확인을 위한 시각화\\\"\\\"\\\"\n",
    "    \n",
    "    fig = make_subplots(\n",
    "        rows=2, cols=2,\n",
    "        subplot_titles=[\n",
    "            '1. 분포 비교 (정규성 확인)',\n",
    "            '2. Q-Q 플롯 (정규성)',\n",
    "            '3. 박스 플롯 (등분산성)',\n",
    "            '4. 분산 비교'\n",
    "        ],\n",
    "        specs=[\n",
    "            [{'type': 'histogram'}, {'type': 'scatter'}],\n",
    "            [{'type': 'box'}, {'type': 'bar'}]\n",
    "        ]\n",
    "    )\n",
    "    \n",
    "    # 1. 히스토그램\n",
    "    fig.add_trace(\n",
    "        go.Histogram(x=group1, name=group1_name, opacity=0.6, nbinsx=15),\n",
    "        row=1, col=1\n",
    "    )\n",
    "    fig.add_trace(\n",
    "        go.Histogram(x=group2, name=group2_name, opacity=0.6, nbinsx=15),\n",
    "        row=1, col=1\n",
    "    )\n",
    "    \n",
    "    # 2. Q-Q 플롯 (그룹 1)\n",
    "    theoretical_quantiles = stats.norm.ppf(np.linspace(0.01, 0.99, len(group1)))\n",
    "    sample_quantiles = np.sort(group1)\n",
    "    sample_quantiles_std = (sample_quantiles - np.mean(sample_quantiles)) / np.std(sample_quantiles)\n",
    "    \n",
    "    fig.add_trace(\n",
    "        go.Scatter(\n",
    "            x=theoretical_quantiles,\n",
    "            y=sample_quantiles_std,\n",
    "            mode='markers',\n",
    "            name=f'{group1_name} Q-Q',\n",
    "            marker=dict(color='blue')\n",
    "        ),\n",
    "        row=1, col=2\n",
    "    )\n",
    "    \n",
    "    # 이상적 선 추가\n",
    "    line_range = [theoretical_quantiles.min(), theoretical_quantiles.max()]\n",
    "    fig.add_trace(\n",
    "        go.Scatter(\n",
    "            x=line_range, y=line_range,\n",
    "            mode='lines',\n",
    "            name='이상적 선',\n",
    "            line=dict(color='red', dash='dash')\n",
    "        ),\n",
    "        row=1, col=2\n",
    "    )\n",
    "    \n",
    "    # 3. 박스 플롯\n",
    "    fig.add_trace(\n",
    "        go.Box(y=group1, name=group1_name),\n",
    "        row=2, col=1\n",
    "    )\n",
    "    fig.add_trace(\n",
    "        go.Box(y=group2, name=group2_name),\n",
    "        row=2, col=1\n",
    "    )\n",
    "    \n",
    "    # 4. 분산 비교\n",
    "    var1 = np.var(group1, ddof=1)\n",
    "    var2 = np.var(group2, ddof=1)\n",
    "    \n",
    "    fig.add_trace(\n",
    "        go.Bar(\n",
    "            x=[group1_name, group2_name],\n",
    "            y=[var1, var2],\n",
    "            name='분산',\n",
    "            text=[f'{var1:.2f}', f'{var2:.2f}'],\n",
    "            textposition='auto'\n",
    "        ),\n",
    "        row=2, col=2\n",
    "    )\n",
    "    \n",
    "    fig.update_layout(\n",
    "        title='📊 t-검정 가정 확인',\n",
    "        height=800\n",
    "    )\n",
    "    \n",
    "    return fig\n",
    "\n",
    "# 예제 데이터: 등분산성 위반 사례\n",
    "np.random.seed(42)\n",
    "\n",
    "# 그룹 1: 작은 분산\n",
    "group_A = np.random.normal(100, 5, 30)  # 평균 100, 표준편차 5\n",
    "\n",
    "# 그룹 2: 큰 분산 (등분산성 위반!)\n",
    "group_B = np.random.normal(105, 15, 25)  # 평균 105, 표준편차 15\n",
    "\n",
    "print(\\\"🧪 실험 데이터: 등분산성 위반 사례\\\")\n",
    "print(f\\\"그룹 A: n={len(group_A)}, 평균={np.mean(group_A):.1f}, SD={np.std(group_A, ddof=1):.1f}\\\")\n",
    "print(f\\\"그룹 B: n={len(group_B)}, 평균={np.mean(group_B):.1f}, SD={np.std(group_B, ddof=1):.1f}\\\")\n",
    "print(f\\\"분산 비율: {np.var(group_A, ddof=1)/np.var(group_B, ddof=1):.2f}\\\")\n",
    "print(\\\"\\\")\n",
    "\n",
    "# 가정 확인\n",
    "assumption_results = check_assumptions(group_A, group_B, '그룹 A', '그룹 B')\n",
    "\n",
    "# 시각화\n",
    "fig_assumptions = visualize_assumptions(group_A, group_B, '그룹 A', '그룹 B')\n",
    "fig_assumptions.show()\n",
    "\n",
    "# 결과 출력\n",
    "print(\\\"📋 가정 검정 결과:\\\")\n",
    "print(f\\\"\\n🎲 정규성 (Shapiro-Wilk):\")\n",
    "print(f\\\"   그룹 A: p = {assumption_results['normality']['group1_p']:.4f} {'✅' if assumption_results['normality']['group1_p'] > 0.05 else '❌'}\\\")\n",
    "print(f\\\"   그룹 B: p = {assumption_results['normality']['group2_p']:.4f} {'✅' if assumption_results['normality']['group2_p'] > 0.05 else '❌'}\\\")\n",
    "\n",
    "print(f\\\"\\n⚖️ 등분산성 (Levene's test):\")\n",
    "print(f\\\"   통계량: {assumption_results['equal_variance']['statistic']:.3f}\\\")\n",
    "print(f\\\"   p-값: {assumption_results['equal_variance']['p_value']:.4f} {'✅' if assumption_results['equal_variance']['assumption_met'] else '❌'}\\\")\n",
    "print(f\\\"   분산 비율: {assumption_results['descriptive']['variance_ratio']:.2f}\\\")\n",
    "\n",
    "print(f\\\"\\n💡 권장사항: {'Student\\'s t-test 사용 가능' if assumption_results['equal_variance']['assumption_met'] else 'Welch\\'s t-test 사용 권장 🚨'}\\\")"
   ],
