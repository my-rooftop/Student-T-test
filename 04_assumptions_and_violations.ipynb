    "    \n",
    "    # 가정 검정\n",
    "    assumptions = check_assumptions(group1, group2)\n",
    "    \n",
    "    # 분산 비율\n",
    "    variance_ratio = max(var1, var2) / min(var1, var2)\n",
    "    \n",
    "    # 표본 크기 비율\n",
    "    size_ratio = max(n1, n2) / min(n1, n2)\n",
    "    \n",
    "    recommendations = []\n",
    "    \n",
    "    # 정규성 확인\n",
    "    if not assumptions['normality']['both_normal']:\n",
